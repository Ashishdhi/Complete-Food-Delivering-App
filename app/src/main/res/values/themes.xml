<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodODoor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorAccent">@color/dark_gray</item>
        <item name="colorAccent">@color/dark_gray</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/AppModalStyle</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="android:windowSoftInputMode">adjustPan</item>

    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/gsemibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="customStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>