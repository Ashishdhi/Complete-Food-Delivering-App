<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recentordercardlist"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <ImageView
                    android:id="@+id/imgCategory"
                    android:layout_width="90dp"
                    android:scaleType="centerCrop"
                    android:layout_height="90dp"
                     />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:fontFamily="@font/gsemibold"
                    android:text="Lovely Sweets &amp; fast food"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/gregular"
                    android:paddingTop="10dp"
                    android:text="mix veg salad"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gbold"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="rs. 18"
                    android:textColor="@color/darkorange"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/vegrecentorder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/veg"
            /> <ImageView
        android:visibility="gone"
            android:id="@+id/nonvegrecentorder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/nonveg"
            />
    </androidx.cardview.widget.CardView>
</layout>