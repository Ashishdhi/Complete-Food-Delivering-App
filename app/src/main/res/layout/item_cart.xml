<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="5dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="10dp"
                android:layout_height="130dp">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fruit" />
                <RelativeLayout
                    android:layout_gravity="bottom|center"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:id="@+id/tvAdd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gmidum"
                        android:gravity="center"
                        android:text="Add"

                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/lytCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/btnMinus"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_gredent_5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_minus_sign"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/gmidum"
                            android:gravity="center"
                            android:text="1"
                            android:layout_marginHorizontal="2dp"
                            android:background="@drawable/border_tv"
                            android:textSize="16dp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/btnPlus"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_gredent_5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/white" />
                    </LinearLayout>
                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gsemibold"
                    android:singleLine="true"
                    android:text="Dosa Onion"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/gregular"
                    android:text="mix veg salad"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
>
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gmidum"
                        android:singleLine="true"
                        android:text="Rs 180"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                    <ImageView
                        android:id="@+id/tvRemove"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/gregular"
                        android:text="Remove"
                        android:padding="10dp"
                        android:src="@drawable/ic_outline_delete_24"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />



                </LinearLayout>
            </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>